<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper  
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hotel.dao.UserDao">
	<select id="selectCountUserByOpenId" parameterType="java.lang.String"
		resultType="java.lang.Integer">
		select count(*) from user where openID=#{openId}
	</select>
	<insert id="insertUser" parameterType="map">
		insert into
		user(id,openID,nickName,salt)values(#{id},#{openId},#{nickName},#{id})
	</insert>
	<select id="selectUserInfoByOpenId" parameterType="java.lang.String"
		resultType="User">
		select * from user where openID=#{openId}
	</select>
	<update id="updateUserGpsMsg" parameterType="map">
		update user
		<set> latitude=#{latitude},longitude=#{longitude}</set>
		where openID=#{openId}
	</update>
	<update id="updateUserStateByOpenId" parameterType="map">
		uodate user
		<set>
			<if test="state!=null">
				state=#{state}
			</if>
		</set>
		where openID=#{openId}
	</update>
	<update id="updateUser" parameterType="User">
	update user <set>
	<if test="userName!=null">
	userName=#{userName},
	</if>
		<if test="password!=null">
	password=#{password},
	</if>
		<if test="nickName!=null">
	nickName=#{nickName},
	</if>
		<if test="headPic!=null">
	headPic=#{headPic},
	</if>
		<if test="gender!=null">
	gender=#{gender},
	</if>
	
		<if test="age!=null">
	age=#{age},
	</if>
		<if test="phoneNumber!=null">
	phoneNumber=#{phoneNumber},
	</if>
		<if test="email!=null">
	email=#{email},
	</if>
		<if test="salt!=null">
	salt=#{salt},
	</if>
		<if test="latitude!=null">
	latitude=#{latitude},
	</if>
		<if test="longitude!=null">
	longitude=#{longitude},
	</if>
		<if test="state!=null">
	state=#{state},
	</if>
		<if test="level!=null">
	level=#{level},
	</if>
		<if test="integral!=null">
	integral=#{integral},
	</if>
	</set>
	<where>
	openID=#{openID}
	</where>
	</update>
</mapper> 